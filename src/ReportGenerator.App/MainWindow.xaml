<Window x:Class="ReportGenerator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Generator" Height="700" Width="1100">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Left: Templates -->
        <StackPanel Grid.RowSpan="2" Grid.Column="0" Margin="0,0,12,0">
            <TextBlock Text="Templates" FontSize="18" FontWeight="Bold"/>
            <ListBox ItemsSource="{Binding Templates}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}" Height="480"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBox Width="150" Margin="0,0,8,0" Text="{Binding NewTemplateName, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Add" Width="80" Command="{Binding AddTemplateCommand}"/>
            </StackPanel>
        </StackPanel>

        <!-- Center: Editor + Preview -->
        <StackPanel Grid.Column="1" Grid.RowSpan="2">
            <TextBlock Text="Body (use {{expr}} placeholders)" FontWeight="SemiBold"/>
            <TextBox Text="{Binding BodyText, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="300" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
            <TextBlock Text="Preview" Margin="0,8,0,0" FontWeight="SemiBold"/>
            <FlowDocumentScrollViewer x:Name="PreviewViewer" Document="{Binding PreviewDocument}"/>
        </StackPanel>

        <!-- Right: Params + Actions -->
        <StackPanel Grid.Column="2" Grid.RowSpan="2">
            <TextBlock Text="Parameters (JSON)" FontWeight="SemiBold"/>
            <TextBox Text="{Binding ParamsJson, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="200" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Width="100"/>
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="8,0,0,0" Width="100"/>
            </StackPanel>
            <Separator/>
            <TextBlock Text="Print" FontWeight="SemiBold" Margin="0,6,0,2"/>
            <Button Content="Print" Command="{Binding PrintCommand}" Width="120"/>
        </StackPanel>
    </Grid>
    </Window>
