<Window x:Class="ReportGenerator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Generator" Height="400" Width="640">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Templates" FontSize="18" FontWeight="Bold"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Templates}" DisplayMemberPath="Name"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBox Width="280" Margin="0,0,8,0" Text="{Binding NewTemplateName, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Add" Width="80" Command="{Binding AddTemplateCommand}"/>
        </StackPanel>
    </Grid>
</Window>
